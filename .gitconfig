[user]
	email = jnr305@nyu.edu
	name = Julien Rabinow

[core]
	longpaths = true

[credential]
	helper = cache --timeout=3600

[alias]
  st = status
  co = checkout
  ci = commit
  br = branch
  cob = checkout -b
  lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  lg = !"git lg2"
  url = config --get remote.origin.url
  yolo = !git commit -am \"$(curl -s http://whatthecommit.com/index.txt)\"
  stag = "!id=`git rev-parse --verify HEAD`; git tag -s tag_for_${id:0:8} -m \"Tag for commit $id\""
  vtag = !git tag -v `git describe`
  fpush = "!branch=$(git rev-parse --abbrev-ref HEAD); remote=$(git remote); git branch -u \"${remote}\" \"${branch}\"; git push -u \"${remote}\" \"${branch}\""
  fpull = "!git branch -u origin $(git rev-parse --abbrev-ref HEAD)"
  delbr = "!git push -d $(git remote) "

[color]
	ui = auto
  diff = auto

[color "diff"]
  whitespace = red reverse

[sendemail]
  chainreplyto = no

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[commit]
	gpgsign = true

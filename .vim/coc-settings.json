{
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "graphql",
        "go",
        "html",
        "javascript",
        "markdown",
        "python",
        "sh",
        "sql",
        "typescript",
        "yaml"
    ],
    // python config
    "pyright.enable": true,
    "python.linting.enabled": true,
    "python.formatting.provider": "black",
    "python.linting.pytypeEnabled": true,
    // golang config
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ]
        }
    },

    // java config
    "java.home": "/Library/Java/JavaVirtualMachines/jdk-21-azul-zulu.jdk/Contents/Home/",
    "java.import.gradle.java.home": "/Library/Java/JavaVirtualMachines/openjdk8-zulu/Contents/Home/",
    //"java.jdt.ls.java.home": "/Library/Java/JavaVirtualMachines/jdk-21-azul-zulu.jdk/Contents/Home/",
    "java.compile.nullAnalysis.mode": "disabled",

    // sql config
    "sql.formatOptions.keywordCase": "upper",

    // bash config
    // https://github.com/josa42/coc-sh#configuration-options
    "sh.enable": true,
    "bashIde.backgroundAnalysisMaxFiles": 500,
    "bashIde.enableSourceErrorDiagnostics": true,
    "bashIde.shfmt.binaryNextLine": true,
    "bashIde.shfmt.caseIndent": true,
    "bashIde.shfmt.funcNextLine": true,
    "bashIde.shfmt.simplifyCode": true,
    "bashIde.shfmt.spaceRedirects": true,

    // diagnostics config
    "diagnostic-languageserver.filetypes": {
        // lint `sh` (includes `bash`) files
        "sh": "shellcheck"
    },
    "diagnostic-languageserver.formatFiletypes": {
        // format `sh` (includes `bash`) files using formatter defined below
        "sh": "shfmt"
    }
}

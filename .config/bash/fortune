#!/usr/bin/env bash

COLUMNS=$(tput cols)
LINES=$(tput lines)


shopt -s extglob

if command -v fortune >/dev/null 2>&1; then
    if command -v cowsay >/dev/null 2>&1 && \
        [[ $COLUMNS -ge 80 ]] && \
        [[ $LINES -ge 28 ]]; then
      fortune -a|randcow
    else
      fortune -a
    fi
fi
